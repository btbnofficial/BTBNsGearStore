@model IEnumerable<BTBNsGearStore.Models.Post>

@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Views/BTBNsGear/BTBNsGearStore.cshtml";
}
<link rel="" type="text/css" href="~/Content/bootstrap.css" />

<table style="border-spacing:50px;">
    <tr>
        <th>
            Tiêu Đề:
        </th>

        <th>
            Ngày đăng:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                @Html.ActionLink("Xem bài viết", "BaiViet", new { id = item.Id, @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Trở về trang chủ", "TrangChu")

